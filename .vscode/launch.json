{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Account Management System",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/src/accounting/index.js",
            "cwd": "${workspaceFolder}/src/accounting",
            "console": "integratedTerminal",
            "env": {
                "NODE_ENV": "development"
            },
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "name": "Debug Account Management System",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/src/accounting/index.js",
            "cwd": "${workspaceFolder}/src/accounting",
            "console": "integratedTerminal",
            "env": {
                "NODE_ENV": "development"
            },
            "restart": true,
            "runtimeArgs": [
                "--inspect-brk"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ]
}